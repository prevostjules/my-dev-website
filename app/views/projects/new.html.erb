<%= simple_form_for(@project) do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
