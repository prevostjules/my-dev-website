<h1 class="show"><%= @project.title %></h1>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
        <%= cl_image_tag @project.photos.first.key, secure: true, class: "d-block w-100" %>
    </div>
    <% @project.photos[1...@project.photos.length].each do |photo| %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, secure: true, class: "d-block w-100" %>
      </div>
    <% end %>
  </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<h2><%= @project.summary %></h2>

<%= @project.rich_body %>

<%= @project.workers %>
<%= @project.days %>
