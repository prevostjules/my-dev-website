<div class="card">
  <%= cl_image_tag project.photo.key, alt: "test", secure: true, class: "card-img" %>
  <div class="card-infos">
    <h2><%= project.title %></h2>
    <p><%= project.summary %></p>
    <div class="card-btns">
      <%= link_to "Plus d'infos", project_path(project), class: "btn btn-primary" %>
    <%= link_to "Voir le site", project.link, target: "_blank", rel: "nofollow", class: "btn btn-primary" %>
    </div>
    <hr>
    <div class="d-flex justify-content-around mb-3 card-time">
      <div class="d-flex align-items-center">
        <%= user_or_users(project.workers) %>
        <p class="mb-0 ml-2"><%= project.workers %></p>
      </div>
      <div class="d-flex align-items-center">
        <i class="fas fa-stopwatch"></i>
        <p class="mb-0 ml-2"><%= project.days %> jours</p>
      </div>
    </div>

    <div class="card-tags">
      <% project.tags.each do |tag| %>
        <span class="badge badge-<%= random_class %>"><%= tag.name %></span>
      <% end %>
    </div>
  </div>

</div>
